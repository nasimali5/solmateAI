{
  "tasks": {
    "lint": "deno lint",
    "fmt": "deno fmt",
    "dev": "deno run --watch main.ts"
  },
  "nodeModulesDir": "auto",
  "fmt": {
    "files": {
      "include": ["./**/*.ts", "./**/*.js", "./**/*.json"],
      "exclude": ["node_modules"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 4,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["./**/*.ts"],
      "exclude": ["node_modules"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-explicit-any"]
    }
  },
  "imports": {
    "@evan/opus": "npm:@evan/opus@^1.0.3",
    "@std/assert": "jsr:@std/assert@1",
    "@supabase/supabase-js": "jsr:@supabase/supabase-js@^2.48.1"
  }
}
